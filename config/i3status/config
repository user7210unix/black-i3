general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "cpu_usage"
order += "memory"
order += "tztime local"

cpu_usage {
    format = "CPU %usage"
    format_above_threshold = "CPU <span color=\"#ef2929\">%usage%</span>"
    max_threshold = 85
}

memory {
    format = "RAM %used"
    threshold_degraded = "1.5G"
    format_degraded = "RAM <span color=\"#f57900\">%used</span>"
}

tztime local {
    format = "%d/%m/%Y %H:%M"
}
